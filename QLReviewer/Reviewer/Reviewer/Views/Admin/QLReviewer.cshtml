@model IEnumerable<Reviewer.Models.Data.Author>
@{
    ViewData["Title"] = "QLReviewer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:black;">Quản Lý Tác Giả</h2>
@await Html.PartialAsync("~/Views/Shared/Partials/Them1.cshtml")
<table id="table_id" class="display">
    <thead>
        <tr>
            <th>Họ Tên</th>
            <th>Tài Khoản</th>
            <th>Mật Khẩu</th>
            <th>Email</th>
            <th>Avartar</th>
            <th>Địa Chỉ</th>
            <th>Số tiền</th>
            <th>Chức Năng</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullnameRe)</td>
                <td>@Html.DisplayFor(modelItem => item.UsernameRe)</td>
                <td>@Html.DisplayFor(modelItem => item.PasswordRe)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailRe)</td>
                <td>
                    <img src="~/Img/Reviewer/@item.AvatarRe" width="40" height="40" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.DiaChiRe)</td>
                <td>@Html.DisplayFor(modelItem => item.SoTien)</td>

                <td>
                    <div>
                        <div>
                            <a class="btn btn-primary" style="float:left; margin-right:10px" href="@Url.Action("Sua1", "Admin", new { id = item.MaReviewer })">Sửa</a>
                        </div>
                        <div>
                            <a class="btn btn-primary btn-thu2" style=" float:left" href="@Url.Action("Xoa1", "Admin", new { id = item.MaReviewer }) ">Xóa</a>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    }


</table>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>

