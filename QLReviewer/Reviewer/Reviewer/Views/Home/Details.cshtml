
@{
    ViewData["Title"] = "Chi Tiết";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<style>
    .fa-thumbs-up, .fa-thumbs-down {
        font-size: 20px;
        cursor: pointer;
        user-select: none;
    }

    .fa:hover {
            color: darkblue;
        }

    .active {
        color: darkblue;
    }
</style>
<section class="main_news_wrapper cc_single_post_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-9 col-xs-12">
                <!-- ~~~=| SP area START |=~~~ -->
                <div class="cc_single_post">
                    <div class="bsp_img">
                        <div id="carousel-example-genericbs" class="carousel slide" data-ride="carousel">
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="~/Img/SmartPhone/@Model.HinhAnhBv" alt="blog single post"  />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sp_details">
                        <h2>@Model.TenBai</h2>
                        <div class="post_meta">
                            <ul>
                                @await Component.InvokeAsync("Author", Model.MaReviewer)
                                <li><a href=""><i class="fa fa-eye"></i>@Model.LuotXem</a></li>
                                <li><a href=""><i class="fa fa-comment-o"></i>45</a></li>
                            </ul>
                        </div>
                        <div class="post_text">
                            @Html.Raw(Model.NoiDung)
                        </div>
                        <div class="social_tags">
                            <div class="social_tags_left">
                                <p>Like :</p>
                                <ul>
                                    <li><i id="button" class="fa fa-thumbs-up"></i></li>
                                    <li><i id="button1" class="fa fa-thumbs-down"></i></li>
          
                                </ul>
                            </div>
                            <div class="social_tags_right">
                                <ul>
                                    <li><a class="fa fa-facebook" href="https://www.facebook.com/"></a></li>
                                    <li><a class="fa fa-twitter" href="https://twitter.com/"></a></li>
                                    <li><a class="fa fa-google-plus" href="https://www.google.com/"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ~~~=| SP area END |=~~~ -->
            </div>
            <div class="col-md-3 col-sm-3 col-xs-12">
                <div class="home_sidebar">
                    <div class="purchase_sidebar">
                        <div class="purchase_sidebar_img">
                            <img src="~/images/sidebar1.jpg" alt="" />
                            <div class="purchase_overlay"></div>
                            <div class="purchase_sidebar_text">
                                <h2>LBT TEK</h2>
                                <p>Cung cấp bài đánh giá sản phầm chất lượng tốt nhất</p>
                                <div class="purchase_s">
                                    <a href="">Xem</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="follow_us_side">
                        <h2>Hãy theo dõi chúng tôi</h2>
                        <div class="all_single_follow">
                            <div class="single_follow_us">
                                <a href="">
                                    <i class="fa fa-facebook"></i><br>
                                    9999<br>
                                    Fans
                                </a>
                            </div>
                            <div class="single_follow_us twit">
                                <a href="">
                                    <i class="fa fa-twitter"></i><br>
                                    5697<br>
                                    Fans
                                </a>
                            </div>
                            <div class="single_follow_us goopl">
                                <a href="">
                                    <i class="fa fa-google-plus"></i><br>
                                    8386<br>
                                    Fans
                                </a>
                            </div>
                            <div class="single_follow_us last_one">
                                <a href="">
                                    <i class="fa fa-dribbble"></i><br>
                                    5638<br>
                                    Fans
                                </a>
                            </div>
                        </div>
                    </div>
                    @await Component.InvokeAsync("XemNhieu")
                    @await Component.InvokeAsync("Image")
                </div>
            </div>
        </div>
    </div>
</section>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.3&appId=403772016845870&autoLogAppEvents=1"></script>
<script>
    // lấy về button
    var button = document.getElementById('button');
    var button1 = document.getElementById('button1');
    //gán sự kiện click
    button.addEventListener("click", function () {
        //Lấy tất cả các class của button và chuyển thành chuỗi
        var allClass = this.classList.toString();
        // kiểm tra nếu chưa tồn tại class active thì thêm class active
        if (allClass.indexOf('active') == -1) {
            this.classList += ' active';
        }
    });
    button1.addEventListener("click", function () {
        //Lấy tất cả các class của button và chuyển thành chuỗi
        var allClass1 = this.classList1.toString();
        // kiểm tra nếu chưa tồn tại class active thì thêm class active
        if (allClass1.indexOf('active') == -1) {
            this.classList1 += ' active';
        }
    });
</script>