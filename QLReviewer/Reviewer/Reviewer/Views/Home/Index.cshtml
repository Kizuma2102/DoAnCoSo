    ViewData["Title"] = "Trang Review về sản phẩm";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

}

<section class="hp_banner_area section_padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="hp_banner_box">
                    @await Component.InvokeAsync("News")
                </div>
        </div>
        
    </div>
</section>
<!-- ~~~=| Banner END |=~~~ -->
<!-- ~~~=| Main Wrapper END |=~~~ -->
<section class="main_news_wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-sm-9 col-xs-12">
                <!-- ~~~=| SP area START |=~~~ -->
                <div class="fashion_area">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            @await Component.InvokeAsync("IndexDanhMuc")
