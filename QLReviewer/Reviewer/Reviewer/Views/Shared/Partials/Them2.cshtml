<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Thêm khách hàng</button>
@using (Html.BeginForm("Them2", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm quản trị </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form enctype="multipart/form-data" asp-action="Them2">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputText">Tài Khoản </label>
                            <input type="text" name="UsernameKh" class="form-control" id="inputText" placeholder="Nhập Tài Khoản">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputText">Mật Khẩu</label>
                        <input type="text" name="PassKh" class="form-control" id="inputText" placeholder="Nhập Mật Khẩu">
                    </div>
                    <div class="form-group">
                        <label for="inputText">Họ Tên</label>
                        <input type="text" name="HoTenKh" class="form-control" id="inputText" placeholder=" Nhập Họ và Tên">
                    </div>
                    <div class="form-group ">
                        <label for="inputText">Email</label>
                        <input type="email" name="EmailKh" class="form-control" id="inputText" placeholder="Nhập Email">
                    </div>
                    <div class="form-row ">
                       
                        <div class="form-group col-md-6">
                            <label for="inputText">Avartar </label>
                            <input type="file" name="image" class="form-control" >
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>
}